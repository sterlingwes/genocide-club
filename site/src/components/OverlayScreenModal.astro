<div id="overlay-modal">
  <div class="overlay-content">
    <div class="overlay-min-margin">
      <slot />
      <div id="overlay-close">
        <svg
          width="30"
          height="30"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M12 2C6.47 2 2 6.47 2 12C2 17.53 6.47 22 12 22C17.53 22 22 17.53 22 12C22 6.47 17.53 2 12 2ZM12 20C7.59 20 4 16.41 4 12C4 7.59 7.59 4 12 4C16.41 4 20 7.59 20 12C20 16.41 16.41 20 12 20ZM15.59 7L12 10.59L8.41 7L7 8.41L10.59 12L7 15.59L8.41 17L12 13.41L15.59 17L17 15.59L13.41 12L17 8.41L15.59 7Z"
            fill="white"></path>
        </svg>
      </div>
    </div>
  </div>
</div>
<style>
  #overlay-modal {
    pointer-events: none;
    display: none;
    color: rgba(255, 255, 255, 0.8);
    z-index: 300;
    position: absolute;
    left: 0;
    top: 20vh;
    width: 100vw;
    height: 100vh;
    background-color: rgba(15, 0, 0, 0);
    opacity: 0;
    overflow-y: scroll;

    &.modal-setup {
      display: block;
      transition:
        opacity 1.2s ease-in-out,
        top 0.7s ease-in-out,
        background 0.5s ease-in-out 0.5s;
    }

    &.modal-visible {
      pointer-events: auto;
      top: 0;
      opacity: 1;
      background-color: rgba(15, 0, 0, 0.9);
    }
  }

  #overlay-close {
    position: absolute;
    top: 30px;
    right: 30px;
    opacity: 0.8;
    cursor: pointer;
  }

  .overlay-content {
    margin: 10vh auto;
    max-width: 800px;
    font-size: 20px;
    line-height: 1.6;

    h2 {
      margin-top: 0;
    }

    p:last-of-type {
      margin-bottom: 0;
    }

    a {
      color: rgba(0, 174, 9, 0.8);
      text-decoration: none;
    }
  }

  .overlay-min-margin {
    margin: 0 40px;
    position: relative;
  }
</style>
<script>
  const close = document.querySelector("#overlay-close");
  const overlay = document.querySelector("#overlay-modal");

  if (close && overlay) {
    close.addEventListener("click", () => {
      overlay.classList.remove("modal-visible", "modal-setup");
    });
  }
</script>
